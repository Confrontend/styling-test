{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true
  },
  "include": ["vite.config.ts"],
  "build": {
    "outDir": "dist-linaria",
    "rollupOptions": {
      "input": { "app": "index.linaria.html" }
    }
  },
  "server": {
    "open": "index.html"
  }
}
